{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "API del Registro de Servidores públicos de la Administración Pública Federal que intervienen en procedimientos de contrataciones públicas"
  },
  "paths": {
    "/spic": {
      "get": {
        "tags": [
          "spic"
        ],
        "summary": "Servidores públicos que intervienen en contrataciones",
        "operationId": "get_spic",
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "description": "Ordena por fecha de actualización de forma ascendete y descendente, los valores permitidos son 'asc' y 'desc', por defecto el orden es ascendente.",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ]
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página a mostrar",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          },
          {
            "name": "page_size",
            "in": "query",
            "description": "Número de registros a mostrar por página, el máximo permitido es 200 y el minimo 1",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 200
            }
          },
          {
            "name": "nombres",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor por su nombre o nombres",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apellido1",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor por su primer apellido",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apellido2",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor por su segundo apellido",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "rfc",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor por RFC",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "query",
            "description": "Devuelve resultados al buscar un servidor por su ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "actualizacion",
            "in": "query",
            "description": "Devuelve resultados de los servidores a partir de la fecha proporcionada",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "rfc_solicitante",
            "in": "query",
            "description": "RFC de la persona quien hace la consulta, si se omite este parametro, se enviaran solo los datos públicos",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/spic"
                }
              }
            }
          },
          "400": {
            "description": "Página invalida"
          },
          "403": {
            "description": "No tienes permisos"
          }
        },
        "security": [
          {
            "spic_auth": [
              "read:spic"
            ]
          }
        ]
      },
      "post": {
        "tags": [
          "spic"
        ],
        "summary": "Servidores públicos que intervienen en contrataciones",
        "operationId": "post_spic",
        "requestBody": {
          "description": "JSON para peticiones de busqueda avanzada",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/post_query"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/spic"
                }
              }
            }
          },
          "400": {
            "description": "Página inválida"
          },
          "403": {
            "description": "No tienes permisos"
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error_post"
                }
              }
            }
          }
        },
        "security": [
          {
            "spic_auth": [
              "read:spic"
            ]
          }
        ]
      }
    }
  },
  "externalDocs": {
    "description": "Más información",
    "url": "https://github.com/PDNMX/api_docs"
  },
  "components": {
    "securitySchemes": {
      "spic_auth": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "/oauth",
            "scopes": {
              "read:spic": "Obtiene lista de servidores que intervienen en contrataciones"
            }
          }
        }
      },
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      }
    },
    "schemas": {
      "spic": {
        "type": "object",
        "required": [
          "pagination",
          "results"
        ],
        "properties": {
          "pagination": {
            "type": "object",
            "required": [
              "page_size",
              "page",
              "total"
            ],
            "properties": {
              "page_size": {
                "type": "number",
                "minimum": 1,
                "description": "Total de páginas",
                "example": 100
              },
              "page": {
                "type": "number",
                "minimum": 1,
                "description": "Número de página actual",
                "example": 20
              },
              "total": {
                "type": "number",
                "minimum": 1,
                "description": "Total de registros",
                "example": 30
              }
            }
          },
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "fecha_captura": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Fecha de captura del registro",
                  "example": "20180820T00:00:00Z"
                },
                "expediente": {
                  "type": "string",
                  "description": "Identificador del expediente",
                  "example": "ABC123"
                },
                "ejercicio_fiscal": {
                  "type": "number",
                  "description": "Ejercicio fiscal",
                  "example": 2018
                },
                "periodo_ejercicio": {
                  "description": "Periodo al que corresponde la información",
                  "type": "object",
                  "properties": {
                    "fecha_inicial": {
                      "type": "string",
                      "format": "date",
                      "description": "Fecha inicial del periodo al que corresponde la información",
                      "example": "2018-01-01"
                    },
                    "fecha_final": {
                      "type": "string",
                      "format": "date",
                      "description": "Fecha final del periodo al que corresponde la información",
                      "example": "2018-12-31"
                    }
                  }
                },
                "id_ramo": {
                  "type": "number",
                  "minimum": 1,
                  "description": "Elemento identificador del Ramo",
                  "example": 23
                },
                "ramo": {
                  "type": "string",
                  "description": "Identifica y clasifica los recursos en el presupuesto de egresos a las Dependencias y en su caso Entidades, a la Presidencia de la República, a la Procuraduría General de la República y a los Tribunales Administrativos.",
                  "example": "Provisiones salariales y económicas"
                },
                "sistema_origen": {
                  "type": "string",
                  "description": "Description goes here",
                  "example": "RENIRESP"
                },
                "rfc": {
                  "type": "string",
                  "description": "Description goes here",
                  "example": "JPM851111C44"
                },
                "nombres": {
                  "type": "string",
                  "description": "Nombre o nombres del servidor público",
                  "example": "John Juan"
                },
                "primer_apellido": {
                  "type": "string",
                  "description": "Primer apellido del servidor público",
                  "example": "Pérez"
                },
                "segundo_apellido": {
                  "type": "string",
                  "description": "Segundo apellido del servidor público",
                  "example": "Mendez"
                },
                "genero": {
                  "type": "string",
                  "enum": [
                    "Masculino",
                    "Femenino",
                    "Otro"
                  ],
                  "description": "Genero",
                  "example": "Masculino"
                },
                "institucion_dependencia": {
                  "description": "Indicar el nombre de la institución donde se encuentren registradas las inversiones, cuentas o valores",
                  "type": "object",
                  "properties": {
                    "nombre": {
                      "type": "string",
                      "description": "Nombre de la institucion"
                    },
                    "siglas": {
                      "type": "string",
                      "maxLength": 20,
                      "description": "Siglas de la institucion",
                      "example": "SHCP"
                    }
                  }
                },
                "puesto": {
                  "type": "string",
                  "description": "Se deberá indicar el puesto o cargo ocupado.",
                  "example": "Director de área"
                },
                "tipo_area": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "Se debe definir el tipo de area",
                    "example": "T"
                  }
                },
                "nivel_responsabilidad": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "tipo_procedimiento": {
                  "type": "number",
                  "minimum": 1,
                  "description": "Especificar el tipo de procedimiento",
                  "example": 1
                }
              }
            }
          }
        }
      },
      "post_query": {
        "type": "object",
        "properties": {
          "sort": {
            "type": "object",
            "properties": {
              "nombre": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "primer_apellido": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "segundo_apellido": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "institucion_dependencia.nombre": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "puesto": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              }
            }
          },
          "page": {
            "type": "integer",
            "description": "Número de página a mostrar",
            "example": 10
          },
          "page_size": {
            "type": "integer",
            "description": "Número de registros a mostrar por página, el máximo permitido es 200 y el minimo 1",
            "example": 10
          },
          "id": {
            "type": "string",
            "description": "Devuelve resultados al buscar un servidor público por su ID. Si se especifica este valor, el objeto query es omitido.",
            "example": "123abc"
          },
          "query": {
            "properties": {
              "nombres": {
                "type": "string",
                "description": "Nombres o nombre de la persona.",
                "example": "Juan Pedro"
              },
              "primer_apellido": {
                "type": "string",
                "description": "Primer apellido de la persona.",
                "example": "Tenorio"
              },
              "segundo_apellido": {
                "type": "string",
                "description": "Segundo apellido de la persona.",
                "example": "Calderón"
              },
              "institucion_dependencia.nombre": {
                "type": "string",
                "description": "Se deberá señalar el Ente Público o entidad que corresponda al Servidor Público.",
                "example": "Presidencia de la República"
              }
            }
          },
          "rfc_solicitante": {
            "type": "string",
            "description": "RFC de la persona quien hace la consulta, si se omite este parametro, se enviaran solo los datos públicos",
            "example": "GOAP780710RH7"
          }
        }
      },
      "error_post": {
        "description": "Estos valores son definidos por el sistema del API.",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string",
            "description": "Código alfa númerico del error de la consulta.",
            "example": "abc123"
          },
          "message": {
            "type": "string",
            "description": "Texto descriptivo para el usuario final del error en la consulta",
            "example": "Error al formar la consulta, revise el formato de los campos."
          }
        }
      }
    }
  }
}
