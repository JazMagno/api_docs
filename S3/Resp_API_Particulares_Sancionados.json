{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "API de particulares sancionados"
  },
  "paths": {
    "/psancionados": {
      "get": {
        "tags": [
          "psancionados"
        ],
        "summary": "Particulares sancionados",
        "operationId": "get_psancionados",
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "description": "Ordena por fecha de actualización de forma ascendete y descendente, los valores permitidos son 'asc' y 'desc', por defecto el orden es ascendente.",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ]
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página a mostrar",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          },
          {
            "name": "page_size",
            "in": "query",
            "description": "Número de registros a mostrar por página, el máximo permitido es 200 y el minimo 1",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 200
            }
          },
          {
            "name": "nombres",
            "in": "query",
            "description": "Devuelve resultados al buscar a un particular sancionado por su nombre o nombres",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apellido1",
            "in": "query",
            "description": "Devuelve resultados al buscar a un particular sancionado por su primer apellido",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apellido2",
            "in": "query",
            "description": "Devuelve resultados al buscar a un particular sancionado por su segundo apellido",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "rfc",
            "in": "query",
            "description": "Devuelve resultados al buscar a un particular sancionado por RFC",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "query",
            "description": "Devuelve resultados al buscar un particular sancionado por su ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "actualizacion",
            "in": "query",
            "description": "Devuelve resultados de los particulares sancionados a partir de la fecha proporcionada",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "rfc_solicitante",
            "in": "query",
            "description": "RFC de la persona quien hace la consulta, si se omite este parametro, se enviaran solo los datos públicos",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/psancionados"
                }
              }
            }
          },
          "400": {
            "description": "Página inválida"
          },
          "403": {
            "description": "No tienes permisos"
          }
        },
        "security": [
          {
            "psancionados_auth": [
              "read:psancionados"
            ]
          }
        ]
      },
      "post": {
        "tags": [
          "psancionados"
        ],
        "summary": "Muestra los particulares sancionados permitiendo busquedas avanzadas",
        "operationId": "post_psancionados",
        "requestBody": {
          "description": "JSON para peticiones de busqueda avanzada",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/post_query"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/psancionados"
                }
              }
            }
          },
          "400": {
            "description": "Página inválida"
          },
          "403": {
            "description": "No tienes permisos"
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error_post"
                }
              }
            }
          }
        },
        "security": [
          {
            "psancionados_auth": [
              "read:psancionados"
            ]
          }
        ]
      }
    }
  },
  "externalDocs": {
    "description": "Más información",
    "url": "https://github.com/PDNMX/api_docs"
  },
  "components": {
    "securitySchemes": {
      "psancionados_auth": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "/oauth",
            "scopes": {
              "read:psancionados": "Obtiene la lista de particulares sancionados"
            }
          }
        }
      },
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      }
    },
    "schemas": {
      "psancionados": {
        "type": "object",
        "required": [
          "pagination",
          "results"
        ],
        "properties": {
          "pagination": {
            "type": "object",
            "required": [
              "page_size",
              "page",
              "total"
            ],
            "properties": {
              "page_size": {
                "type": "number",
                "minimum": 1,
                "description": "Total de páginas",
                "example": 100
              },
              "page": {
                "type": "number",
                "minimum": 1,
                "description": "Número de página actual",
                "example": 20
              },
              "total": {
                "type": "number",
                "minimum": 1,
                "description": "Total de registros",
                "example": 30
              }
            }
          },
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "fecha_captura": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Fecha de captura de la información",
                  "example": "2017-07-21T17:32:28Z"
                },
                "numero_expediente": {
                  "type": "string",
                  "description": "Número del expediente",
                  "example": "ABC123"
                },
                "sistema_origen": {
                  "type": "string",
                  "description": "Sistema del origen de la información",
                  "example": "Directorio de Sancionados, Secretaría de la Función Pública"
                },
                "nombre_razon_social": {
                  "type": "string",
                  "description": "Nombre o razón social",
                  "example": "PATITO TELECOM S.A. de C.V."
                },
                "rfc": {
                  "type": "string",
                  "description": "Se deberá escribir los 10 caracteres básicos y los 3 caracteres de la homoclave",
                  "example": "PAT21343213"
                },
                "telefono": {
                  "type": "string",
                  "maxLength": 15,
                  "description": "'Número teléfonico estandarizado http://www.itu.int/dms_pub/itu-t/opb/sp/T-SP-E.164D-2009-PDF-S.pdf.",
                  "example": "552123244"
                },
                "domicilio": {
                  "description": "Este dato es información confidencial",
                  "type": "object",
                  "properties": {
                    "pais": {
                      "type": "object",
                      "properties": {
                        "valor": {
                          "type": "string",
                          "description": "Nombre  del pais especificado en estándar ISO3166",
                          "example": "México"
                        },
                        "codigo": {
                          "type": "string",
                          "maxLength": 5,
                          "description": "Código alpha 2 del país especificado en estándar ISO3166",
                          "example": "MX"
                        }
                      }
                    },
                    "entidad_federativa": {
                      "type": "object",
                      "properties": {
                        "nom_ent": {
                          "type": "string",
                          "description": "Nombre de la entidad federativa del Marco Geoestadístico Nacional",
                          "example": "México"
                        },
                        "cve_ent": {
                          "type": "string",
                          "maxLength": 5,
                          "description": "Clave de la entidad federativa del Marco Geoestadístico Nacional",
                          "example": "15"
                        }
                      }
                    },
                    "municipio": {
                      "type": "object",
                      "properties": {
                        "nom_mun": {
                          "type": "string",
                          "description": "Nombre del municipio",
                          "example": "Ecatepec de Morelos"
                        },
                        "cve_mun": {
                          "type": "string",
                          "maxLength": 10,
                          "description": "Clave del municipio",
                          "example": "033"
                        }
                      }
                    },
                    "cp": {
                      "type": "string",
                      "description": "Código postal del domicilio",
                      "example": "55018"
                    },
                    "localidad": {
                      "type": "object",
                      "properties": {
                        "nom_loc": {
                          "type": "string",
                          "description": "Nombre de la localidad",
                          "example": "Ecatepec de Morelos"
                        },
                        "cve_loc": {
                          "type": "string",
                          "maxLength": 10,
                          "description": "Clave de la localidad",
                          "example": "0001"
                        }
                      }
                    },
                    "vialidad": {
                      "type": "object",
                      "properties": {
                        "tipo_vial": {
                          "type": "string",
                          "description": "Nombre del tipo de vialidad",
                          "example": "CALLE"
                        },
                        "nom_vial": {
                          "type": "string",
                          "description": "Clave del tipo de vialidad",
                          "example": "El Rosal"
                        }
                      }
                    },
                    "numExt": {
                      "type": "string",
                      "description": "Número exterior del domicilio",
                      "example": "24"
                    },
                    "numInt": {
                      "type": "string",
                      "description": "Número interior del domicilio",
                      "example": "48"
                    }
                  }
                },
                "tipo_sancion": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "example": "Ejemplo"
                  }
                },
                "institucion_dependencia": {
                  "type": "object",
                  "properties": {
                    "nombre": {
                      "type": "string",
                      "description": "Nombre de la institución o dependencia",
                      "example": "Secretaría de Hacienda y Crédito Público"
                    },
                    "siglas": {
                      "type": "string",
                      "description": "Siglas de la institución o dependencia",
                      "example": "SHCP"
                    }
                  }
                },
                "tipo_falta": {
                  "type": "string",
                  "description": "Tipo de falta cometida",
                  "example": "Contratación indebida"
                },
                "causa_motivo_hechos": {
                  "type": "string",
                  "description": "Causa o motivo de la sanción",
                  "example": "Causa o motivo de la sanción"
                },
                "objeto_social": {
                  "type": "string",
                  "description": "Objeto social de la empresa",
                  "example": "Objeto social de la empresa"
                },
                "objeto_contrato": {
                  "type": "string",
                  "description": "Description goes here",
                  "example": "Servicio de telefonía fija"
                },
                "autoridad_sancionadora": {
                  "type": "string",
                  "description": "Description goes here",
                  "example": "OIC"
                },
                "responsable": {
                  "type": "object",
                  "properties": {
                    "nombres": {
                      "type": "string",
                      "maxLength": 50,
                      "description": "Nombres de la persona",
                      "example": "Carlos"
                    },
                    "primer_apellido": {
                      "type": "string",
                      "maxLength": 50,
                      "description": "Primer apellido de la persona",
                      "example": "Pérez"
                    },
                    "segundo_apellido": {
                      "type": "string",
                      "maxLength": 50,
                      "description": "Segundo apellido de la persona",
                      "example": "López"
                    }
                  }
                },
                "resolucion": {
                  "type": "object",
                  "properties": {
                    "sentido": {
                      "type": "string",
                      "description": "Sentido de la resolución",
                      "example": "Sansionatoria con multa"
                    },
                    "url": {
                      "type": "string",
                      "description": "URL para descargar o consultar el documento de la resolución",
                      "example": "https://ejemplo.mx/archivo/documento.pdf"
                    },
                    "fecha": {
                      "type": "string",
                      "format": "date",
                      "description": "Fecha de la resolución",
                      "example": "2019-11-20"
                    }
                  }
                },
                "multa": {
                  "type": "object",
                  "properties": {
                    "monto": {
                      "type": "number",
                      "minimum": 1,
                      "description": "Monto de la multa",
                      "example": 5000000
                    },
                    "moneda": {
                      "type": "string",
                      "description": "Código de la moneda de acuerdo al estandar ISO 4217",
                      "example": "MXN"
                    }
                  }
                },
                "inhabilitacion": {
                  "type": "object",
                  "properties": {
                    "plazo": {
                      "type": "string",
                      "description": "Plazo de la inhablicación",
                      "example": "2 años"
                    },
                    "fecha_inicial": {
                      "type": "string",
                      "format": "date",
                      "description": "Fecha inicial de la inhabilitación",
                      "example": "2019-01-01"
                    },
                    "fecha_final": {
                      "type": "string",
                      "format": "date",
                      "description": "Fecha final de la inhabilitación",
                      "example": "2020-12-31"
                    }
                  }
                },
                "observaciones": {
                  "type": "string",
                  "description": "Observaciones correspondientes",
                  "example": "Se multo e inhabilitó al proveedor PATITO TELECOM S.A de C.V. por ..."
                },
                "documentos": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "Identificador del documento",
                        "example": "doc-1"
                      },
                      "tipo": {
                        "type": "string",
                        "description": "Tipo de documento",
                        "example": "CONSTANCIA_INHABILITACION"
                      },
                      "titulo": {
                        "type": "string",
                        "description": "Titulo del documento",
                        "example": "Constancia de inhabilitación..."
                      },
                      "descripcion": {
                        "type": "string",
                        "description": "Descripción del documento",
                        "example": "Descripción del documento"
                      },
                      "url": {
                        "type": "string",
                        "description": "URL de descarga o consulta del documento",
                        "example": "https://ejemplo.mx/archivo/documento.pdf"
                      },
                      "fecha": {
                        "type": "string",
                        "format": "date",
                        "description": "Fecha de creación del documento",
                        "example": "2019-11-20"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post_query": {
        "type": "object",
        "properties": {
          "sort": {
            "type": "object",
            "properties": {
              "nombre_razon_social": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "rfc": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "institucion_dependencia": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              }
            }
          },
          "page": {
            "type": "integer",
            "description": "Número de página a mostrar",
            "example": 10
          },
          "page_size": {
            "type": "integer",
            "description": "Número de registros a mostrar por página, el máximo permitido es 200 y el minimo 1",
            "example": 10
          },
          "id": {
            "type": "string",
            "description": "Devuelve resultados al buscar una declaración por su ID. Si se especifica este valor, el objeto query es omitido.",
            "example": "123abc"
          },
          "query": {
            "properties": {
              "nombre_razon_social": {
                "type": "string",
                "description": "Nombre o razón social",
                "example": "PATITO TELECOM"
              },
              "rfc": {
                "type": "string",
                "description": "Se deberá escribir los 10 caracteres básicos y los 3 caracteres de la homoclave",
                "example": "PAT21343213"
              },
              "institucion_dependencia": {
                "type": "string",
                "description": "Nombre de la institución o dependencia.",
                "example": "Secretaría de Hacienda y Crédito Público"
              }
            }
          },
          "rfc_solicitante": {
            "type": "string",
            "description": "RFC de la persona quien hace la consulta, si se omite este parametro, se enviaran solo los datos públicos",
            "example": "GOAP780710RH7"
          }
        }
      },
      "error_post": {
        "description": " Estos valores son definidos por el sistema del API.",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string",
            "description": "Código alfa númerico del error de la consulta.",
            "example": "abc123"
          },
          "message": {
            "type": "string",
            "description": "Texto descriptivo para el usuario final del error en la consulta",
            "example": "Error al formar la consulta, revise el formato de los campos."
          }
        }
      }
    }
  }
}
