{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "API de servidores sancionados"
  },
  "paths": {
    "/ssancionados": {
      "get": {
        "tags": [
          "ssancionados"
        ],
        "summary": "Servidores sancionados",
        "operationId": "get_ssancionados",
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "description": "Ordena por fecha de actualización de forma ascendete y descendente, los valores permitidos son 'asc' y 'desc', por defecto el orden es ascendente.",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ]
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página a mostrar",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          },
          {
            "name": "page_size",
            "in": "query",
            "description": "Número de registros a mostrar por página, el máximo permitido es 200 y el minimo 1",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 200
            }
          },
          {
            "name": "nombres",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor público sancionado por su nombre o nombres",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apellido1",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor público sancionado por su primer apellido",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apellido2",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor público sancionado por su segundo apellido",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "rfc",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor público sancionado por RFC",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "curp",
            "in": "query",
            "description": "Devuelve resultados al buscar a un servidor público sancionado por CURP",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "query",
            "description": "Devuelve resultados al buscar un servidor público sancionado por su ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "actualizacion",
            "in": "query",
            "description": "Devuelve resultados de los servidores público sancionado a partir de la fecha proporcionada",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "rfc_solicitante",
            "in": "query",
            "description": "RFC de la persona quien hace la consulta, si se omite este parametro, se enviaran solo los datos públicos",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ssancionados"
                }
              }
            }
          },
          "400": {
            "description": "Página inválida"
          },
          "403": {
            "description": "No tienes permisos"
          }
        },
        "security": [
          {
            "ssancionados_auth": [
              "read:ssancionados"
            ]
          }
        ]
      },
      "post": {
        "tags": [
          "ssancionados"
        ],
        "summary": "Muestra información de los servidores públicos sancionados permitiendo busquedas avanzadas",
        "operationId": "post_ssancionados",
        "requestBody": {
          "description": "JSON para peticiones de busqueda avanzada",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/post_query"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ssancionados"
                }
              }
            }
          },
          "400": {
            "description": "Página inválida"
          },
          "403": {
            "description": "No tienes permisos"
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error_post"
                }
              }
            }
          }
        },
        "security": [
          {
            "ssancionados_auth": [
              "read:ssancionados"
            ]
          }
        ]
      }
    }
  },
  "externalDocs": {
    "description": "Más información",
    "url": "https://github.com/PDNMX/api_docs"
  },
  "components": {
    "securitySchemes": {
      "ssancionados_auth": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "/oauth",
            "scopes": {
              "read:ssancionados": "Obtiene lista de servidores sancionados"
            }
          }
        }
      },
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      }
    },
    "schemas": {
      "ssancionados": {
        "type": "object",
        "required": [
          "pagination",
          "results"
        ],
        "properties": {
          "pagination": {
            "type": "object",
            "required": [
              "page_size",
              "page",
              "total"
            ],
            "properties": {
              "page_size": {
                "type": "number",
                "minimum": 1,
                "description": "Total de páginas",
                "example": 100
              },
              "page": {
                "type": "number",
                "minimum": 1,
                "description": "Número de página actual",
                "example": 20
              },
              "total": {
                "type": "number",
                "minimum": 1,
                "description": "Total de registros",
                "example": 30
              }
            }
          },
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "fecha_captura": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Fecha de captura de la información",
                  "example": "2017-07-21T17:32:28Z"
                },
                "rfc": {
                  "type": "string",
                  "description": "Se deberá escribir los 10 caracteres básicos y los 3 caracteres de la homoclave",
                  "example": "PAT21343213"
                },
                "curp": {
                  "type": "string",
                  "description": "Se deberá escribir los 18 caracteres de la Clave Única de Registro de Población, como la emitió la Secretaría de Gobernación.",
                  "example": "ABCD780814MDFAXL"
                },
                "nombres": {
                  "type": "string",
                  "description": "Nombres de la persona",
                  "example": "Carlos"
                },
                "primer_apellido": {
                  "type": "string",
                  "description": "Primer apellido de la persona",
                  "example": "Pérez"
                },
                "segundo_apellido": {
                  "type": "string",
                  "description": "Segundo apellido de la persona",
                  "example": "López"
                },
                "genero": {
                  "type": "string",
                  "enum": [
                    "M",
                    "F",
                    "O"
                  ],
                  "description": "Genero",
                  "example": "Masculino"
                },
                "institucion_dependencia": {
                  "type": "object",
                  "properties": {
                    "nombre": {
                      "type": "string",
                      "description": "Nombre de la institución o dependencia",
                      "example": "Secretaría de Hacienda y Crédito Público"
                    },
                    "siglas": {
                      "type": "string",
                      "description": "Siglas de la institución o dependencia",
                      "example": "SHCP"
                    }
                  }
                },
                "puesto": {
                  "type": "string",
                  "description": "Puesto del servidor público sancionado",
                  "example": "Director de área"
                },
                "autoridad_sancionadora": {
                  "type": "string",
                  "description": "Nombre de la Autoridad que impone la sanción",
                  "example": "Organo Interno de Control"
                },
                "tipo_sancion": {
                  "type": "string",
                  "description": "Tipo de sanción impuesta",
                  "example": "M"
                },
                "tipo_falta": {
                  "type": "string",
                  "description": "Tipo de falta cometida",
                  "example": "AG"
                },
                "causa": {
                  "type": "string",
                  "description": "Causa o motivo de la sanción",
                  "example": "ABUSO DE AUTORIDAD"
                },
                "expediente": {
                  "type": "string",
                  "description": "Número del expediente",
                  "example": "0047/2016"
                },
                "resolucion": {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string",
                      "description": "URL para descargar o consultar el documento de la resolución",
                      "example": "https://ejemplo.mx/archivo/documento.pdf"
                    },
                    "fecha_notificacion": {
                      "type": "string",
                      "format": "date",
                      "description": "Fecha de la resolución",
                      "example": "2018-05-21"
                    }
                  }
                },
                "multa": {
                  "type": "object",
                  "properties": {
                    "monto": {
                      "type": "number",
                      "minimum": 1,
                      "description": "Monto de la sanción económica en caso de existir",
                      "example": 3000000
                    },
                    "moneda": {
                      "type": "string",
                      "description": "Moneda del monto de la sanción económica",
                      "example": "MXN"
                    }
                  }
                },
                "inhabilitacion": {
                  "type": "object",
                  "properties": {
                    "plazo": {
                      "type": "string",
                      "description": "Plazo de la inhablicación",
                      "example": "3 meses"
                    },
                    "fecha_inicial": {
                      "type": "string",
                      "format": "date",
                      "description": "Fecha de Inicio de la sanción (Inhabilitación)",
                      "example": "2018-08-17"
                    },
                    "fecha_final": {
                      "type": "string",
                      "format": "date",
                      "description": "Fecha de término de la sanción (Inhabilitación)",
                      "example": "2018-11-17"
                    },
                    "observaciones": {
                      "type": "string",
                      "description": "Observaciones correspondientes",
                      "example": "ABC"
                    }
                  }
                },
                "documentos": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "Identifiador del documento",
                        "example": "doc-1"
                      },
                      "tipo": {
                        "type": "string",
                        "description": "Tipo de documento",
                        "example": "CONSTANCIA_SANCION"
                      },
                      "titulo": {
                        "type": "string",
                        "description": "Titulo del documento",
                        "example": "Constancia de sanción..."
                      },
                      "descripcion": {
                        "type": "string",
                        "description": "Descripción del documento",
                        "example": "Descripción del documento"
                      },
                      "url": {
                        "type": "string",
                        "description": "URL de descarga o consulta del documento",
                        "example": "https://ejemplo.mx/archivo/documento.pdf"
                      },
                      "fecha": {
                        "type": "string",
                        "format": "date",
                        "description": "Description goes here",
                        "example": "2019-11-20"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post_query": {
        "type": "object",
        "properties": {
          "sort": {
            "type": "object",
            "properties": {
              "nombres": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "primer_apellido": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "segundo_apellido": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              },
              "institucion_dependencia.nombre": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ],
                "description": "Campo a ordenar de forma ascendente o descente",
                "example": "asc"
              }
            }
          },
          "page": {
            "type": "integer",
            "description": "Número de página a mostrar",
            "example": 10
          },
          "page_size": {
            "type": "integer",
            "description": "Número de registros a mostrar por página, el máximo permitido es 200 y el minimo 1",
            "example": 10
          },
          "id": {
            "type": "string",
            "description": "Devuelve resultados al buscar una declaración por su ID. Si se especifica este valor, el objeto query es omitido.",
            "example": "123abc"
          },
          "query": {
            "properties": {
              "nombres": {
                "type": "string",
                "description": "Nombres o nombre del servidor público sancionado.",
                "example": "Juan Pedro"
              },
              "primer_apellido": {
                "type": "string",
                "description": "Primer apellido del servidor público sancionado.",
                "example": "Tenorio"
              },
              "segundo_apellido": {
                "type": "string",
                "description": "Segundo apellido del servidor público sancionado.",
                "example": "Calderon"
              },
              "institucion_dependencia.nombre": {
                "type": "string",
                "description": "Nombre de la institución dependencia a la que pertenece el servidor público sancionado.",
                "example": "Secretaría de Hacienda y Crédito Público"
              }
            }
          },
          "rfc_solicitante": {
            "type": "string",
            "description": "RFC de la persona quien hace la consulta, si se omite este parametro, se enviaran solo los datos públicos",
            "example": "GOAP780710RH7"
          }
        }
      },
      "error_post": {
        "description": "Estos valores son definidos por el sistema del API.",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string",
            "description": "Código alfa númerico del error de la consulta.",
            "example": "abc123"
          },
          "message": {
            "type": "string",
            "description": "Texto descriptivo para el usuario final del error en la consulta",
            "example": "Error al formar la consulta, revise el formato de los campos."
          }
        }
      }
    }
  }
}
